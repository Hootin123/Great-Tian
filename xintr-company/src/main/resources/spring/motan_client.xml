                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="customerExpenseService"
                   interface="com.xtr.api.service.salary.CustomerExpenseService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="customersSupplementService"
                   interface="com.xtr.api.service.customer.CustomersSupplementService"
                   basicReferer="motantestClientBasicConfig"/>
