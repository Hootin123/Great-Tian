                   interface="com.xtr.api.service.company.CompanyLogService" basicReferer="motantestClientBasicConfig"/>

    <!--薪资设置 end-->

    <!-- 社保 -->
    <motan:referer id="customerShebaoService"
                   interface="com.xtr.api.service.shebao.CustomerShebaoService" basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="companyShebaoService"
                   interface="com.xtr.api.service.shebao.CompanyShebaoService" basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="customerShebaoOrderService"
                   interface="com.xtr.api.service.shebao.CustomerShebaoOrderService" basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="sbtService"
                   interface="com.xtr.api.service.sbt.SbtService" basicReferer="motantestClientBasicConfig"/>
    <motan:referer id="shebaoDepoitService"
                   interface="com.xtr.api.service.shebao.ShebaoDepoitService" basicReferer="motantestClientBasicConfig"/>
    <!--薪资设置 end-->

    <!--急速发工资 start-->
    <motan:referer id="rapidlyPayrollService"
                   interface="com.xtr.api.service.salary.RapidlyPayrollService" basicReferer="motantestClientBasicConfig"/>
    <motan:referer id="rapidlyPayrollExcelService"
                   interface="com.xtr.api.service.salary.RapidlyPayrollExcelService" basicReferer="motantestClientBasicConfig"/>
    <!--急速发工资 end-->
</beans>