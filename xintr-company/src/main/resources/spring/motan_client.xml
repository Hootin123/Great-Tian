<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:motan="http://api.weibo.com/schema/motan"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://api.weibo.com/schema/motan http://api.weibo.com/schema/motan.xsd">

    <!--注册中心配置 使用不同注册中心需要依赖对应的jar包。-->
    <motan:registry regProtocol="zookeeper" name="registry" address="${zookeeper.address}" connectTimeout="20000"/>

    <!-- motan协议配置 -->
    <motan:protocol default="true" name="motan" haStrategy="failover"
                    loadbalance="roundrobin" maxClientConnection="10" minClientConnection="2"/>

    <!-- 通用referer基础配置 -->
    <motan:basicReferer group="motan-demo-rpc1" module="motan-demo-rpc" requestTimeout="100000"
                        application="myMotanDemo" protocol="motan" registry="registry"
                        id="motantestClientBasicConfig" throwException="false" check="true"/>

    <!-- company client config start-->
    <motan:referer id="companySocialOrdersService"
                   interface="com.xtr.api.service.company.CompanySocialOrdersService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="companySalaryExcelService"
                   interface="com.xtr.api.service.company.CompanySalaryExcelService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="companyRechargesService"
                   interface="com.xtr.api.service.company.CompanyRechargesService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="companyBorrowOrdersService"
                   interface="com.xtr.api.service.company.CompanyBorrowOrdersService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="companyDepsService"
                   interface="com.xtr.api.service.company.CompanyDepsService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="companyBorrowBillsService"
                   interface="com.xtr.api.service.company.CompanyBorrowBillsService"
                   basicReferer="motantestClientBasicConfig"/>


    <motan:referer id="companyMemberLogItemsService"
                   interface="com.xtr.api.service.company.CompanyMemberLogItemsService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="companysService"
                   interface="com.xtr.api.service.company.CompanysService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="sendMsgService"
                   interface="com.xtr.api.service.send.SendMsgService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="companyMembersService"
                   interface="com.xtr.api.service.company.CompanyMembersService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="companyMoneyRecordsService"
                   interface="com.xtr.api.service.company.CompanyMoneyRecordsService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="companyAccountService"
                   interface="com.xtr.api.service.company.CompanyAccountService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="subAccountService"
                   interface="com.xtr.api.service.account.SubAccountService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="redEnvelopeService"
                   interface="com.xtr.api.service.account.RedEnvelopeService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="redReceiveService"
                   interface="com.xtr.api.service.account.RedReceiveService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="companyMsgsService"
                   interface="com.xtr.api.service.company.CompanyMsgsService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="companyProtocolsService"
                   interface="com.xtr.api.service.company.CompanyProtocolsService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="companyDeptService"
                   interface="com.xtr.api.service.company.CompanyDeptService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="bankCodeService"
                   interface="com.xtr.api.service.account.BankCodeService"
                   basicReferer="motantestClientBasicConfig"/>

    <!-- company client config end-->


    <!-- idGeneratorService -->
    <motan:referer id="idGeneratorService"
                   interface="com.xtr.api.service.order.IdGeneratorService"
                   basicReferer="motantestClientBasicConfig"/>

    <!-- station client config start-->
    <motan:referer id="stationSmscontService"
                   interface="com.xtr.api.service.station.StationSmscontService"
                   basicReferer="motantestClientBasicConfig"/>
    <motan:referer id="stationSmsRecordsService"
                   interface="com.xtr.api.service.station.StationSmsRecordsService"
                   basicReferer="motantestClientBasicConfig"/>
    <motan:referer id="stationCollaborationService"
                   interface="com.xtr.api.service.station.StationCollaborationService"
                   basicReferer="motantestClientBasicConfig"/>
    <!-- station client config end-->


    <!-- customer client config start-->
    <motan:referer id="customerItemsService"
                   interface="com.xtr.api.service.customer.CustomerItemsService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="customerJobsService"
                   interface="com.xtr.api.service.customer.CustomerJobsService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="customersService"
                   interface="com.xtr.api.service.customer.CustomersService"
                   basicReferer="motantestClientBasicConfig"/>

