    <div class="yu">本次操作将删除 $!{trueName} - $!{customerPhone}，删除后账号将不可恢复，您确认删除吗？</div>
    <input type="hidden" name="cutomerId" id="customerId" value="$!{customerId}"/>
    <div class="btn1">
        <input type="button" name="" id="submitBtn" value='确认'>
        <input type="button" name="" class='btnqx1' value='取消'>
    </div>
<script type="text/javascript">
    $(".title3 b").on('click',function(){
        $('#deleat-content').hide();
        $('.mengban2').hide()
        $('.deleat').show()
    })

    //点击关闭按钮
    $(".btnqx1").click(function(){
        var index = parent.layer.getFrameIndex(window.name); //获取窗口索引
        parent.layer.close(index);
    });
    //点击确定删除
    $("#submitBtn").click(function(){

        $.ajax({
            type:'POST',
            url:'customerDelete.htm',
            data:{'customerId':$("#customerId").val()},
            dataType:'json',
            success:function(resultResponse){
                if(resultResponse.success){
                    layer.alert('操作成功',{
                        title:'处理结果',
                    },function(index){
                        parent.loadCustomerList();
                        var index = parent.layer.getFrameIndex(window.name); //获取窗口索引
                        parent.layer.close(index);
                    });

                }else{
                    layer.alert(resultResponse.message);
                }

            },
            error:function(){
                layer.alert("网络错误");
            }


        }) ;

    });
</script>
</body>
