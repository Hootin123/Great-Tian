<!DOCTYPE html>
<html>
<head>
    <title>删除部门</title>
    #parse("comm/head.vm")
    <style>
        .row{
            width: 100%;
            margin-top: 15px;
        }
        .row {
            line-height: 50px;
            text-align: center;
            color: #666;
            font-size: 14px;
            font-family: '微软雅黑';
        }

        .footer{
            width:100%;
            height:40px;
            position: absolute;
            bottom:20px;
        }
        .footerBtn{
            width:200px;
            height:40px;
            margin:0 auto;
        }
        .okbtn{
            display: block;
            width: 200px;
            height: 40px;
            line-height: 35px;
            background: #314a5e;
            color: #FFFFFF;
            border: none;
            float:left;
            border-radius: 6px;
            font-family: "微软雅黑";
            cursor: pointer;
        }

    </style>
</head>

<body>
<div  class="container-fluid">
    <div class="row"> 确认删除此部门吗？</div>


</div>
<div class="footer">
    <div class="footerBtn">
        <input id="id" value="$!id" type="hidden"/>
        <input class="okbtn btn" type="button" value="确定" onclick="DelDeptExtend.save()">
    ##            <input class="cancelbtn btn" type="button" value="取消" onclick="AddDeptExtend.close()">
    </div>
</div>
</div>

</body>
<script>
    DelDeptExtend = {
        save:function(){
            $.get(BASE_PATH + '/dept/delDept.htm', {"id":$("#id").val()}, function(data){
                    if (data.success) {
                        parent.DeptExtend.refrehTree();
                        DelDeptExtend.close();
                    } else {
                        showWarning(data.message);
                    }
                });
        },
        close:function(){
            var index = parent.layer.getFrameIndex(window.name); //获取窗口索引
            parent.layer.close(index);
        }
    }

</script>
</html>