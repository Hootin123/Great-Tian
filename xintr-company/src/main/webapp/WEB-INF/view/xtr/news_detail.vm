<script type="text/javascript">

    $(function(){

        uploadRecord();
    });

    function uploadRecord(){

        var id = getQueryString("id");
        if(!id||id==null){
            return;
        }

        $.ajax({
            type:"POST",
            url:"newsdetail.htm",
            dataType:"json",
            data:{
                'id':id
            },
            async: true,
            success: function(data){
                if(data==null)
                    return;

//if(data.code!='0')
//	return;

                if(data.data.data==null)
                    return;

                var date = new Date(data.data.data.news_releasetime);
                Y = date.getFullYear() + '-';
                M = (date.getMonth()+1 < 10 ? '0'+(date.getMonth()+1) : date.getMonth()+1) + '-';
                M = (date.getMonth()+1 < 10 ? '0'+(date.getMonth()+1) : date.getMonth()+1) + '-';
                if(M.length == 2){
                    M = "0"+M;
                }

                D = date.getDate() + ' ';
                if(D.length == 2){
                    D = "0"+D;
                }
                h = date.getHours() + ':';
                if(h.length == 2){
                    h = "0"+h;
                }
                m = date.getMinutes() + ':';
                if(m.length == 2){
                    m = "0"+m;
                }
                s = date.getSeconds() + "";
                if(s.length == 1){
                    s = "0"+s;
                }
                var news_releasetime=Y+M+D+h+m+s;
                $('#ntitle1').html(data.data.data.news_title==null?'':data.data.data.news_title);
                $('#ntitle').html(data.data.data.news_title==null?'':data.data.data.news_title);
                $('#ntime').html(news_releasetime==null?'':news_releasetime.replace('.0','') +'  来源：'+(data.data.data.news_ly==null?'':data.data.data.news_ly));
                $('#ncont').html(data.data.data.news_content==null?'':data.data.data.news_content);
                $('#nly').html(data.data.data.news_ly==null?'':data.data.data.news_ly);


                $('.footer').css('display','block')
                var iHeight = $(window).height()  - 335-60-60;
                if( $('.contentbox').height()<=iHeight){

                    $('#container').height($(window).height() - 335-60-60);
                }

            }

        });

    }

    window.onload = function(){
        function onrize(){
            var iHeight = $(window).height()  - 335-60;
            if( $('.contentbox').height()<=iHeight){

                $('#container').height($(window).height() - 335-60);
            }

        }

        window.onresize =function(){
            onrize()
        }
    }

    function getQueryString(name) {
        var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
        var r = window.location.search.substr(1).match(reg);
        if (r != null) return unescape(r[2]); return null;
    }

</script>
