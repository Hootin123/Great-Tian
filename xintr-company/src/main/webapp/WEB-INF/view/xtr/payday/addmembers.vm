<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN"
        "http://www.w3.org/TR/html4/strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <title></title>
    #parse("comm/head.vm")
    <link rel="stylesheet" type="text/css" href="#springUrl('/resource/css/payday/addmembers.css')"/>
    <link rel="stylesheet" type="text/css" href="#springUrl('/resource/js/plugins/laydate/need/laydate.css')"/>
    <script src="#springUrl('/resource/js/plugins/laydate/laydate.js')"></script>
    <script src="#springUrl('/resource/js/payday/addmembers.js')"></script>
    <script src="#springUrl('/resource/js/comm/validateUtil.js')"></script>

</head>
<body>
<form id="addForm">
    <input id="customerId" name="customerId" type="hidden" value="$!{member.customerId}">
    <input id="customerDepId" name="customerDepId" type="hidden">
    <input id="customerCompanyId" name="customerCompanyId" type="hidden">
    <table>
        <tr>
            <td>姓名<em>*</em></td>
            <td><input id="customerTurename" type="text" name="customerTurename" required value="$!{member.customerTurename}"/></td>

            <td>性别<em>*</em></td>
            <td>
                <input id="customerSex" type="radio" name="customerSex"
                    #if($member.customerSex eq 1)
                       checked="checked"
                    #end  value="1"
                       required/>&nbsp;&nbsp;男
                <input type="radio" id="customerSex" name="customerSex"
                    #if($member.customerSex eq 0)
                       checked="checked"
                    #end value="0"/>&nbsp;&nbsp;女
            </td>
        </tr>
        <tr>
            <td>手机<em>*</em></td>
            <td><input type="text" id="customerPhone" name="customerPhone" required value="$!{member.customerPhone}"/></td>

            <td>职位<em>*</em></td>
            <td><input type="text" id="customerPlace" name="customerPlace" required value="$!{member.customerPlace}"/></td>
        </tr>
        <tr>
            <td>所在公司<em>*</em></td>
            <td><input type="text" id="customerCompanyName" name="customerCompanyName"  readonly="readonly"/></td>
            <td>所属部门<em>*</em></td>
            <td><input type="text" id="customerDepName" name="customerDepName"  readonly="readonly"/></td>
        </tr>
        <tr>
            <td>工资卡号<em>*</em></td>
            <td><input type="text" id="customerBanknumber" name="customerBanknumber" value="$!{member.customerBanknumber}"/></td>
            <td>开户行<em>*</em></td>
            <td><input type="text" id="customerBank" name="customerBank" value="$!{member.customerBank}"/></td>
        </tr>
        <tr>
            <td>身份证号码<em>*</em></td>
            <td><input type="text" id="customerIdcard" name="customerIdcard"" value="$!{member.customerIdcard}"/></td>
            <td>入职时间<em>*</em></td>
            <td><input type="text" name="customerJoinTime" class="laydate-icon" onclick="laydate({max:'$!date.format('yyyy-MM-dd HH:mm:ss ',$date.getDate())'})"
                       readonly="readonly" value="$!date.format('yyyy-MM-dd',$member.customerJoinTime)"/></td>
        </tr>
    </table>
    <div style="width: 160px; margin:40px auto;">
        <input class="okBtn" type="button" value="确认"/>
        <input class="cancelBtn" type="button" value="取消">
    </div>

</form>
</body>
</html>

