<!DOCTYPE html>
<html>
<head>
    <title>调薪</title>
    #parse("comm/head.vm")
    <link rel="stylesheet" type="text/css" href="#springUrl('/resource/js/plugins/laydate/need/laydate.css')"/>
    <script src="#springUrl('/resource/js/plugins/laydate/laydate.js')"></script>
    <style>
        html,body{
            width:100%;
            height:100%;
            position: relative;

        }
        .row{
            width: 600px;
            float:left;
            margin-top:20px;
        }

        .row .divlabel{
            width: 40%;
            text-align: right;
        }

        .row > div{
            float:left;
        }
        .row > div > label{
            line-height: 36px
        }
        input, textarea{
            padding: 0 5px;
            width: 278px;
            height: 34px;
            border: 1px solid #e3e3e3;
            position: relative;
            top: -1px;
            color: #666666;
            width: 175px;
        }
        .okbtn{
            display: block;
            width: 200px;
            height: 40px;
            line-height: 40px;
            background: #314a5e;
            color: #FFFFFF;
            border: none;
            float:left;
            text-align: center;
            border-radius: 6px;
            display: inline-block;
            cursor: pointer;
            font-family: "微软雅黑";
        }
        /*.cancelbtn{*/
            /*width: 200px;*/
            /*height: 33px;*/
            /*line-height: 33px;*/
            /*border: 1px solid #0696FA;*/
            /*color: #0696FA;*/
            /*background: #FFFFFF;*/
            /*float:right;*/
            /*cursor: pointer;*/
            /*border-radius: 6px;*/
            /*font-family: "微软雅黑";*/
        /*}*/

        .foot{
            width:100%;
            height:40px;
            position:absolute;
            bottom:20px;
            padding:0;
        }
        .footBtn{
            width:200px;
            height:40px;
            margin:0 auto;
        }
        .top{
            text-indent: 20px;
            padding-top:20px;
            color:#333;
        }
        .top b{
            display: block;
            width: 10px;
            height: 10px;
            background: url(#springUrl('/resource/img/customer/new/2.2close.png')) 0 0 no-repeat;
            position: absolute;
            right:20px;
            top:20px;
            cursor: pointer;
        }
        #salary{
            text-indent: 20px;
        }
    </style>
</head>

<body>
<div>
    <div class="top"><h3>调额<b onclick="UpdateSalaryExtend.close()"></b></h3></div>
    <form id="dataForm">
        <div class="row">
            <input id="customerId" name="customerId" value="$!customerId" type="hidden"/>
        <div class="row">
            <div class="divlabel">
                <label>
                    姓名
                </label>
            </div>
            <div style="width:50%;padding-left:30px;">
                <label>$!{customer.customerTurename}</label>
            </div>
        </div>
        <div style="clear: both;padding: 0px"></div>

        <div class="row">
            <div class="divlabel">
                <label>
                    *报销额度
                </label>
            </div>
            <div style="width: 200px; padding-left:30px;">
                <input id="salary" name="expense" value="" placeholder="请输入报销额度"/>
            </div>
        </div>
        <div style="clear: both;padding: 0px"></div>

        <div class="row">
            <div class="divlabel"></div>
            <div class="foot">
                <div class="footBtn">
                    <input class="okbtn btn" type="button" value="确定" onclick="UpdateSalaryExtend.save()">
##                    <input class="cancelbtn btn" type="button" value="取消" onclick="UpdateSalaryExtend.close()">
                </div>
            </div>
        </div>
    </form>
</div>

</body>
<script>

    UpdateSalaryExtend = {
        save:function(){
//            debugger;
            if(isNaN($("#salary").val())){
                showWarning("请输入正确额度");
                return;
            }
            if(!(parseInt($("#salary").val())==$("#salary").val())){
                showWarning("请输入整数");
                return;
            }
            $.ajax({
                type: 'post',
                url: BASE_PATH + '/expense/updateExpense.htm',
                data: $("#dataForm").serialize(),
                success: function(data) {
                    if (data.success) {
                        layer.alert('调额成功',{
                            title:'处理结果',
                        },function(index){
                            parent.onScreen();
                            UpdateSalaryExtend.close();
                        });

                    } else {
                        showWarning(data.message);
                    }
                }
            });

        },
        close:function(){
            var index = parent.layer.getFrameIndex(window.name); //获取窗口索引
            parent.layer.close(index);
        }
    }

</script>
</html>