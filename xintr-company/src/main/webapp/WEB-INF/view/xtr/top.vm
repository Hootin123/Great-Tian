					<%} %>
					
				</ul>
			</div>
		</div>
	</div>

<script type="text/javascript">

$(function(){
	
	if(window.location.pathname!=null && window.location.pathname.length>0){
		if(window.location.pathname.indexOf('/hrcenter.jsp')>-1){
			showidx(4);
		}else if(window.location.pathname.indexOf('/product.jsp')>-1){
			showidx(1);
		}else if(window.location.pathname.indexOf('/safeInfo.jsp')>-1){
			showidx(2);
		}else if(window.location.pathname.indexOf('/succCase.jsp')>-1){
			showidx(3);
		}else if(window.location.pathname.indexOf('/about.jsp')>-1){
			showidx(5);
		}else{
			showidx(0);
		}
	}
	
});

function showidx(idx){
	var lis=$('.nav ul li');
	lis.removeClass('active');
	lis.eq(idx).addClass('active');
}
</script>
