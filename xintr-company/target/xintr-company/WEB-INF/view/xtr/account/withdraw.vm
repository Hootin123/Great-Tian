<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN"
        "http://www.w3.org/TR/html4/strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title></title>
    #parse("comm/head.vm")
    <link href="#springUrl('/resource/css/account/postal.css')" rel="stylesheet">
    <script src="#springUrl('/resource/js/account/withdraw.js')"></script>
    <script src="#springUrl('/resource/js/comm/validateUtil.js')"></script>

</head>

<body>
<div class="topHeadline">
    <h2>账户提现</h2>
##    <img onclick="history.back();" src="#springUrl('/resource/img/salary/guanbi.png')" alt="" id="closeDetailBtn">
</div>
<div class="content">
    <div class="top">
        <h3>可用提现余额：<span id="curMoney">
            #if($!{cashAmout})
                $!{xtr.money($!{cashAmout})}
            #else
                0
            #end
        </span>元，请提交提现金额，及提现银行账户信息</h3>
        <form id="postalForm">
            <div class="sum">
                <div class="sum1">提现金额(元)</div>
                <div class="sum2"><input type="text" name="rechargeMoney" id="rechargeMoney" placeholder="您希望提现的金额"></div>
            </div>
            <div class="bank">
                <h3>提现银行：</h3>
                <div class="name">
                    <span class="name1">银行：</span>
                    <input class="name2" type="text" name="rechargeBank" id="rechargeBank" value="$!{deposit.depositBankName}" placeholder="提现的银行名称" readonly="readonly">
                </div>
                <div class="name">
                    <span class="name1">账户名称：</span>
                    <input class="name2" type="text" name="bankAccountName" id="bankAccountName" value="$!{deposit.depositBankAccountName}" placeholder="提现的银行账户名" readonly="readonly">
                </div>
                <div class="name">
                    <span class="name1">账号：</span>
                    <input class="name2" type="text" name="rechargeBanknumber" id="rechargeBanknumber" value="$!{deposit.depositBankNumber}" placeholder="提现的账号" readonly="readonly">
                </div>
                <div class="name">
                    <span class="name1">开户支行：</span>
                    <input class="name2" type="text" name="bankSubbranch" id="bankSubbranch" value="$!{deposit.depositSubBankName}" placeholder="提现的银行支行名称" readonly="readonly">
                </div>
            </div>
        </form>
    </div>
    <div class="bottom">
        <div class="footer">
            <a href="javascript:void(0)"
            #if(${deposit})
               class="footer_a1 okBtn"
            #else
               class="footer_a1"
            #end>确定</a>
            <a href="javascript:void(0);" onclick="history.back();" class="footer_a2">取消</a>
        </div>
    </div>
</div>
</body>
</html>