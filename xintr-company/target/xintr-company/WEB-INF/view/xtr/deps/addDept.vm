<script>
    //验证
    var fdept=false;
    function testDept(){
        if($('.newDept input').val()=='' || $('.newDept input').val()==undefined){
            $('.newDept b').html('请输入新部门名称');
            $('.newDept input').addClass('error');
            fdept=false;
        }else{
            $('.newDept b').html('');
            $('.newDept input').removeClass('error');
            fdept=true;
        }
    }
    AddDeptExtend = {
        save:function(){
            testDept()
            if(fdept){
                $.post(BASE_PATH + '/dept/createDept.htm', {"depName" : $("#depName").val(), "depParentId" : $("#depParentId").val()}, function(data){
                    if (data.success) {
                        parent.DeptExtend.refrehTree();
                        AddDeptExtend.close();
                    } else {
                        showWarning(data.message);
                    }
                });
            }
        },
        close:function(){
            var index = parent.layer.getFrameIndex(window.name); //获取窗口索引
            parent.layer.close(index);
        }
    }

</script>
