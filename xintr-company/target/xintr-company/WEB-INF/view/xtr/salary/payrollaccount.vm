        var firstVisitSalary = $("#firstVisitSalary").val();
        if(firstVisitSalary!=null&&firstVisitSalary!=""&&firstVisitSalary!=undefined){
            parent.guidePay();
            $("#firstVisitSalary").val("");
        }
