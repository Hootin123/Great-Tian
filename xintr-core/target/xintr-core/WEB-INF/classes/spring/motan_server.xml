    <motan:service interface="com.xtr.api.service.sys.SysLogService"
                   ref="sysLogService" export="demoMotan:8002" basicService="serviceBasicConfig"/>
    <motan:service interface="com.xtr.api.service.company.CompanyLogService"
                   ref="companyLogService" export="demoMotan:8002" basicService="serviceBasicConfig"/>

    <!-- task service config start-->
