<!DOCTYPE html>
<html lang="en" id='html'>
<head>
    <meta charset="UTF-8">
    <title>员工管理</title>
    <meta name="viewport" content="
	width=device-width,initial-scale=1,user-scalable=no,minimum-scale=1,maximum-scale=1">
    #parse("comm/head.vm")
    <link rel="stylesheet" type="text/css" href="#springUrl('/resource/css/wechatCustomer/wechatCustomerManagerInfo.css')">
    <script type="text/javascript" src="#springUrl('/resource/js/wechatCustomer/wechatCustomerManagerInfo.js')"></script>
</head>
<body>
<header>
    <ul class='top'>
        <li class='active base'>基本信息</li>
        <li class='station'>岗位信息</li>
        <li class='personal'>个人信息</li>
    </ul>
</header>
<section>
    <!-- 基本信息-->
    <div class="EditBase" >
        <div class="main-left">
            <ul>
                <li><em>*</em>姓名</li>
                <li>英文名</li>
                <li><em>*</em>手机</li>
                <li><em>*</em>性别</li>
                <li><em>*</em>生日</li>
                <li>年龄</li>
                <li>婚姻状况</li>
                <li><em>*</em>工资卡卡号</li>
                <li><em>*</em>工资卡开户行</li>
                <li><em>*</em>身份证号</li>
                <li class='idCard'><em>*</em>身份证照</li>
            </ul>
        </div>
        <div class="main-right">
            <form id="editBaseForm">
                <input  name="customerId" type="hidden" value="$!{customerId}">
                <input  id="companyId" type="hidden" value="$!{companyId}">
##                <input id="companyCheckId" name="companyCheckId" type="hidden" value="$!{companyCheckId}">
                    <ul>
                        <li>$!{customersDto.customerTurename}</li>
                        <li class='EnglishName'>
                            <input type="" name="customerEnglishName" placeholder="输入英文名" value="$!{customersDto.customerEnglishName}">
                            <span></span>
                        </li>
                        <li>$!{customersDto.customerPhone}</li>
                        <li class='sex'>
                            <select name="customerSex">
                                #if($!{customersDto.customerSex}==0)
                                    <option value=''>请选择性别</option>
                                    <option value='1'>男</option>
                                    <option value='0' selected="selected">女</option>
                                #elseif($!{customersDto.customerSex}==1)
                                    <option value=''>请选择性别</option>
                                    <option value='1' selected="selected">男</option>
                                    <option value='0'>女</option>
                                #else
                                    <option value=''>请选择性别</option>
                                    <option value='1'>男</option>
                                    <option value='0'>女</option>
                                #end
                            </select>
                            <span></span>
                        </li>
                        <li class='birthday'>$!{customersDto.customerBirthdayMonth}</li>
                        <li class='age'>$!{ageStr}</li>
                        <li>
                            <select name="customerMarriage">
                                #if($!{customersDto.customerMarriage}==1)
                                    <option value="">选择婚姻状况</option>
                                    <option value="1" selected="selected">未婚</option>
                                    <option value="2">已婚</option>
                                    <option value="3">离异</option>
                                #elseif($!{customersDto.customerMarriage}==2)
                                    <option value="">选择婚姻状况</option>
                                    <option value="1">未婚</option>
                                    <option value="2" selected="selected">已婚</option>
                                    <option value="3">离异</option>
                                #elseif($!{customersDto.customerMarriage}==3)
                                    <option value="">选择婚姻状况</option>
                                    <option value="1">未婚</option>
                                    <option value="2">已婚</option>
                                    <option value="3" selected="selected">离异</option>
                                #else
                                    <option value="">选择婚姻状况</option>
                                    <option value="1">未婚</option>
                                    <option value="2">已婚</option>
                                    <option value="3">离异</option>
                                #end
                            </select>
                        </li>
                        <li class='banknumber'>$!{customersDto.customerBanknumber}</li>
                        <li class='openbank'>$!{customersDto.customerBank}</li>
                        <li class='card'>$!{customersDto.customerIdcard}</li>
                        <li class='idCard'>
                            <dl>
                                <dt >+
                                    #if($!{customersDto.customerIdcardImgFront} and $!{customersDto.customerIdcardImgFront}!="")
                                        <img src="http://xintairuan-img.oss-cn-hangzhou.aliyuncs.com/$!{customersDto.customerIdcardImgFront}">
                                    #else
                                        <img src="/resource/img/wechatCustomer/error.png" >
                                    #end
                                    <input  name="customerIdcardImgFront" type="hidden" value="$!{customersDto.customerIdcardImgFront}">
                                </dt>
                                <dd>
                                    身份证正面
                                </dd>
                            </dl>
                            <dl>
                                <dt >+
                                    #if($!{customersDto.customerIdcardImgBack} and $!{customersDto.customerIdcardImgBack}!="")
                                        <img src="http://xintairuan-img.oss-cn-hangzhou.aliyuncs.com/$!{customersDto.customerIdcardImgBack}">
                                    #else
                                        <img src="/resource/img/wechatCustomer/error.png" >
                                    #end
                                    <input  name="customerIdcardImgBack" type="hidden" value="$!{customersDto.customerIdcardImgBack}">
                                </dt>
                                <dd>
                                    身份证反面
                                </dd>
                            </dl>
                        </li>
                    </ul>
                </form>
        </div>
        <div class="footer">
            <div class="affirm amend1" id="baseInfoBtn">确认修改</div>
        </div>
    </div>


    <!-- 岗位信息-->
    <div class="EditStation" style='display: none'>
        <div class="main-left">
            <ul>
                <li>工号</li>
                <li>司龄</li>
                <li><em>*</em>入职时间</li>
                <li><em>*</em>部门</li>
                <li><em>*</em>岗位</li>
            </ul>
        </div>
        <div class="main-right">
            <ul>
                <li>$!{customersDto.stationCustomerNumber}</li>
                <li>$!{diffYear}</li>
                <li>$!date.format('yyyy-MM-dd',$!{customersDto.stationEnterTime})</li>
                <li>$!{customersDto.depName}</li>
                <li>$!{customersDto.stationStationName}</li>
            </ul>
        </div>
        <div class="footer">
            <div class="affirm">确认修改</div>
        </div>
    </div>

    <!-- 个人信息-->
    <div class="EditPersonal"  style='display: none'>
        <div class="main-left">
            <ul>
                <li><em>*</em>紧急联系人</li>
                <li><em>*</em>紧急联系人电话</li>
                <li><em>*</em>户籍所在地</li>
                <li>民族</li>
                <li>政治面貌</li>
                <li>现居住地</li>
                <li>最高学历</li>
                <li>毕业院校</li>
                <li>专业</li>
            </ul>
        </div>
        <div class="main-right">
            <form id="personalForm">
                <input  name="personalId" type="hidden" value="$!{customersDto.personalId}">
                <input  id="companyId" type="hidden" value="$!{companyId}">
                <input  id="customerId" type="hidden" value="$!{customerId}">
                <ul>
                    <li class='linkman'>
                        <input type="" name="personalRelationerName" placeholder="输入你的紧急联系人" value="$!{customersDto.personalRelationerName}">
                        <span></span>
                    </li>
                    <li class='emphone'>
                        <input type="" name="personalRelationerPhone" placeholder="输入你的紧急联系人电话" value="$!{customersDto.personalRelationerPhone}">
                        <span></span>
                    </li>
                    <li class='address'>
                        <input type="" name="personalDomicilePlace" placeholder="输入你的户籍所在地" value="$!{customersDto.personalDomicilePlace}">
                        <span></span>
                    </li>
                    <li class='nation'>
                        <input type="" name="personalNation" placeholder="输入你的民族" value="$!{customersDto.personalNation}">
                        <span></span>
                    </li>
                    <li class='politicsStatus'>
                        <input type="" name="personalPoliticsStatus" placeholder="输入你的政治面貌" value="$!{customersDto.personalPoliticsStatus}">
                        <span></span>
                    </li>
                    <li class='residence'>
                        <input type="" name="personalCurrentPlace" placeholder="输入你的现居住地" value="$!{customersDto.personalCurrentPlace}">
                        <span></span>
                    </li>
                    <li>
                        <select name="personalEducationHigh">
                            #if($!{customersDto.personalEducationHigh}==1)
                                <option value=""></option>
                                <option value="1" selected="selected">高中及以下</option>
                                <option value="2">大专</option>
                                <option value="3">本科</option>
                                <option value="4">硕士研究生</option>
                                <option value="5">博士研究生</option>
                            #elseif($!{customersDto.personalEducationHigh}==2)
                                <option value=""></option>
                                <option value="1">高中及以下</option>
                                <option value="2" selected="selected">大专</option>
                                <option value="3">本科</option>
                                <option value="4">硕士研究生</option>
                                <option value="5">博士研究生</option>
                            #elseif($!{customersDto.personalEducationHigh}==3)
                                <option value=""></option>
                                <option value="1">高中及以下</option>
                                <option value="2">大专</option>
                                <option value="3" selected="selected">本科</option>
                                <option value="4">硕士研究生</option>
                                <option value="5">博士研究生</option>
                            #elseif($!{customersDto.personalEducationHigh}==4)
                                <option value=""></option>
                                <option value="1">高中及以下</option>
                                <option value="2">大专</option>
                                <option value="3">本科</option>
                                <option value="4" selected="selected">硕士研究生</option>
                                <option value="5">博士研究生</option>
                            #elseif($!{customersDto.personalEducationHigh}==5)
                                <option value=""></option>
                                <option value="1">高中及以下</option>
                                <option value="2">大专</option>
                                <option value="3">本科</option>
                                <option value="4">硕士研究生</option>
                                <option value="5" selected="selected">博士研究生</option>
                            #else
                                <option value=""></option>
                                <option value="1">高中及以下</option>
                                <option value="2">大专</option>
                                <option value="3">本科</option>
                                <option value="4">硕士研究生</option>
                                <option value="5">博士研究生</option>
                            #end
                        </select>
                    </li>
                    <li class='school'>
                        <input type="text" name="personalGraduateSchool" placeholder="毕业院校" value="$!{customersDto.personalGraduateSchool}">
                    </li>
                    <li class='major'>
                        <input type="text" name="personalMajor" placeholder="专业" value="$!{customersDto.personalMajor}">
                    </li>
                </ul>
            </form>
        </div>
        <div class="footer">
            <div class="affirm  amend2" id="editPersonalBtn">确认修改</div>
        </div>
    </div>

</section>
</body>
</html>