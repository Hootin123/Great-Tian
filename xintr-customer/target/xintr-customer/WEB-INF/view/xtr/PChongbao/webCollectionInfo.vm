<!DOCTYPE html>
<html lang="en">
<head>
	#parse("comm/head.vm")
	<meta charset="UTF-8">
	<title>采集信息</title>
    <link rel="stylesheet" type="text/css" href="#springUrl('/resource/css/pchongbao/webCollectionInfo.css')">
</head>
<body>
	<div class="webHeader">
		<div class="logo">
			<img  src="#springUrl('/resource/img/pchongbao/web-logo.png')"/>
		</div>
		<div class="logo-text">
			<img src="#springUrl('/resource/img/pchongbao/web-text.png')" />
		</div>
	</div>
	<form id="collectForm">
		<input type="hidden" name="companyId" value="$!{companyId}"/>
		<ul>
			<li class='userName'>
				<input type="text" name="companyTruename" placeholder="留下您的姓名"/>
				<b></b>
			</li>
			<li class='aliPayNumber'>
				<input type="text" name="companyAlipayNumber" placeholder="留下您的支付宝账号"/>
				<b></b>
			</li>
		</ul>
	</form>
	<div class="webFooter">
		<div class='submit'>提交</div>
	</div>

</body>
<script type="text/javascript">
		var fliveName=false,fnumber=false;

//......... 姓名
	$('.userName input').blur(function(){
		testUsername()
	})

	function testUsername(){
		var reg=/^[\w\u4e00-\u9fa5]{2,20}$/
		if($(".userName input").val()=='' || $(".userName input").val()==undefined ){
			$('.userName b').addClass('error').html('请输入您的姓名').show();
			setTimeout(function(){
	    			$('.userName b').fadeOut(500)
	    		},1000)
			fliveName = false
		}
		else if(reg.test($("#username input").val())){
			$('.userName b').removeClass('error').html('').hide();
			fliveName=true;
		}
		else{
			$('.userName b').addClass('error').html('请输入正确的姓名').show();
			setTimeout(function(){
	    			$('.userName b').fadeOut(500)
	    		},1000)
			fliveName = false
		}
	}

	//......... 支付宝账号

	$('.aliPayNumber input').blur(function(){
		testAliPayNumber()
	});

	function testAliPayNumber(){
		reg1=/^1[3|5|7|8]\d{9}$/;
		reg2=/^([a-zA-Z0-9_-])+@([a-zA-Z0-9_-])+(.[a-zA-Z0-9_-])+/ ;
		if($(".aliPayNumber input").val()=='' || $(".aliPayNumber input").val()==undefined ){
			$('.aliPayNumber b').addClass('error').html('请输入支付宝账号').show();
			setTimeout(function(){
	    			$('.aliPayNumber b').fadeOut(500)
	    		},1000)
			fnumber = false
		}
	 	else if(reg1.test($(".aliPayNumber input").val()) || reg2.test($(".aliPayNumber input").val())){
	 		$('.aliPayNumber b').removeClass('error').html('').hide();
			fnumber = true;
		}
		else{
			$('.aliPayNumber b').addClass('error').html('请输入正确支付宝账号').show();
			setTimeout(function(){
	    			$('.aliPayNumber b').fadeOut(500)
	    		},1000)
			fnumber = false

		}
	};

	// 提交

	$(".submit").on('click',function(){
		 	testUsername()
			testAliPayNumber()
		if(fliveName&&fnumber){
            $.ajax({
                url:BASE_PATH+'/web/infoCollectSubmit.htm',
                data:$("#collectForm").serialize(),
                dataType:'json',
                type:'post',
                success:function(data){
                    if(data.success){
                        var map = data.data;
                        var perInfo = map.perInfo;
                        if(perInfo=="wait"){
                            //正在审核
                            window.location=BASE_PATH+"/web/jumpToPromptWait.htm";
                        }else if(perInfo=="noPass"){
                            //审核未通过
                            var reason = map.reason;
                            var companyId = map.companyId;
                            window.location =BASE_PATH+"/web/jumpToPromptDefeat.htm?reason="+reason+"&companyId="+companyId;
                        }else if(perInfo=="pass"){
                            //审核通过
                            window.location = BASE_PATH+"/web/jumpToPromptSuccess.htm"
                        }
                    }else{
                        alert(data.message);
                    }
                },
                error:function(){
                    layer.alert("网络错误");
                }
            });


        }
	})
</script>
</html>