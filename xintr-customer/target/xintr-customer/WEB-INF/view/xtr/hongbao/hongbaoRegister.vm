#######红包注册页面

<!DOCTYPE html>
<html lang="en" id="html">
<head>
    <meta charset="UTF-8">
    <title>注册</title>
    #parse("comm/head.vm")
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=no,minimum-scale=1,maximum-scale=1">
    <script type="text/javascript" src= #springUrl('/resource/js/hongbao/register.js')></script>
    <link rel="stylesheet" type="text/css" href= #springUrl('/resource/css/hongbao/register.css')>

</head>
<body>
<header>
##    <div class="register">新用户注册</div>
    <div class="login1"></div>
</header>
<section>
    <form id="registerForm">
        <!-- 注册来源-->
        <input type="hidden" name="registerFrom"  id="registerFrom" value="$!{companyContactPlace}"/>
        <!-- 地推编号 01~15-->
        <input type="hidden" name="pushNumber" id="pushNumber" value="$!{pushNumber}"/>
    <ul>
        <li id='companyname'>
            <input type="text" name="companyName" placeholder='单位名称(4-20位)'>
            <b></b>
            <em></em>
        </li>
        <li id="username">
            <input type="text" name="memberName" placeholder='姓名'>
            <b></b>
            <em></em>
        </li>
        <li id='password'>
            <input type="password" name="memberPassword" placeholder ='登录密码'>
            <b></b>
            <em></em>
        </li>
        <li id='repassword'>
            <input type="password" name="confirmMemberPassword" placeholder ='确认密码'>
            <b></b>
            <em></em>
        </li>
        <li id='phone'>
            <input type="text" name="memberPhone" id="memberPhone"  placeholder='手机号码'>
            <em></em>
            <b></b>
        </li>
        <li id='phonecode'>
            <input type="text" name="phoneCode" placeholder='短信验证码'>
            <b></b>
            <p>
                <em></em>
                <span>获取验证码</span>
            </p>

        </li>
    </ul>
    </form>
    <div class="hint" style='display: none'>验证码获取错误</div>
    <div class="reg">免费注册</div>
    <div class="login">
       已有账号，在此登录
    </div>
</section>
<!-- 蒙版 -->
<div class="mengban" style='display: none'></div>
<!-- 弹窗登录 -->
<div class="login-popup" style='display: none'>
    <div class='top'>
        <em></em>
    </div>
    <div class="content">
        <h3>登录</h3>
        <form id="loginForm">
            <input type="hidden" name="returnLogin" id="returnLogin" value="$!{returnLogin}"/>
        <ul>
            <li id='regPhone'>
                <input type="text" name="memberPhone" placeholder="输入你的注册手机号">
                <i></i>
                <b></b>
                <em></em>
            </li>
            <li id='regPwd'>
                <input type="password" name="memberPassword" placeholder="输入你的密码">
                <i></i>
                <b></b>
                <em></em>
            </li>
        </ul>
        </form>
        <div class="forget">
            忘记密码？
        </div>
    </div>
    <div class="login-error" style='display: none;color:red;margin-left: 136px'>密码错误</div>
    <div class="footer">确定</div>
    <div class="reg1">
        没有账号？先注册
    </div>
    <p>已经有<span id="receiveCounts">$!{receiveCounts}</span>位HR领取了红包</p>
</div>

</body>
</html>
