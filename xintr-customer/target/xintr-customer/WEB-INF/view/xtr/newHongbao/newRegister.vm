<!DOCTYPE html>
<html lang="en" id='html'>
<head>
	#parse("comm/head.vm")
	<meta charset="UTF-8">
	<title>注册</title>
	<meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=no,minimum-scale=1,maximum-scale=1">
	<script type="text/javascript" src="#springUrl('/resource/js/newHongbao/newRegister.js')"></script>
    <link rel="stylesheet" type="text/css" href="#springUrl('/resource/css/newHongbao/newRegister.css')">
</head>
<body>
	<div class="sign">
		<div class="logo">
			<img src="#springUrl('/resource/img/newHongbao/logo.png')" alt="">
		</div>
		<div class="logo-text">
			<img src="#springUrl('/resource/img/newHongbao/logo-text.png')" alt="">
		</div>
	</div>
	<header>
		<div class="register active">注册</div>
		<div class="login">登录</div>
	</header>
	<!-- 注册 -->
	<div class="register-main">
		<form id="newRegisterForm">
			<ul>
				<li class='companyName'>
					<input type="text" name="companyName" placeholder="请输入4-20位公司名称 ">
					<b></b>
				</li>
				<li class='userName'>
					<input type="text" name="userName" placeholder="请输入您的姓名 ">
					<b></b>
				</li>
				<li class='pwd'>
					<input type="password" name="password" placeholder="请设置登录密码 ">
					<b></b>
				</li>
				<li class='rePwd'>
					<input type="password" name="rePassword" placeholder="重复登录密码 ">
					<b></b>
				</li>
				<li class='phone'>
					<input type="text" name="phoneNumber" placeholder="请输您的手机号码 ">
					<b></b>
				</li>
				<li class='phoneCode'>
					<input type="text"  name="phoneCode" placeholder="请输入手机验证码 ">
					<span>获取验证码</span>
					<b></b>
				</li>
			</ul>
		</form>
		<div class="hint"  id="registerError" style='display: none'>验证码获取错误</div>
		<div class='goRegister'>免费注册</div>

	</div>
	
	<!-- 登录-->
	<div class="login-main" style='display:none'>
		<form id="loginForm">
			<ul>
				<li class='loginPhone'>
					<input type="text" name="loginPhoneNumber" placeholder="请输入您的手机号 ">
					<b></b>
				</li>
				<li class='loginPwd'>
					<input type="password" name="loginPassword" placeholder="请输入登录密码 ">
					<b></b>
				</li>
				<li class='code'>
					<input type="text"  name="code" maxlength="4" placeholder="请输入图形验证 ">
					<span><img src='#springUrl('/newHongbao/getImgCode.htm')' id="code"/></span>
					<b></b>
				</li>
			</ul>
		</form>
		<div class='goLogin'>立即登录</div>
		<div class="hint" id="loginError" style='display: none'>验证码获取错误</div>
	</div>

    <input type="hidden" name="mmtoken" id="mmtoken" value="$!{mmtoken}"/>
    <input type="hidden" name="companyContactPlace" id="companyContactPlace" value="$!{companyContactPlace}"/>
</body>
</html>