<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:motan="http://api.weibo.com/schema/motan"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://api.weibo.com/schema/motan http://api.weibo.com/schema/motan.xsd">

    <!--注册中心配置 使用不同注册中心需要依赖对应的jar包。-->
    <motan:registry regProtocol="zookeeper" name="registry" address="${zookeeper.address}" connectTimeout="2000"/>

    <!-- motan协议配置 -->
    <motan:protocol default="true" name="motan" haStrategy="failover" requestTimeout="100000"
                    loadbalance="roundrobin" maxClientConnection="10" minClientConnection="2"/>

    <!-- 通用referer基础配置 -->
    <motan:basicReferer group="motan-demo-rpc1" module="motan-demo-rpc" requestTimeout="100000"
                        application="myMotanDemo" protocol="motan" registry="registry"
                        id="motantestClientBasicConfig" throwException="false" check="true"/>

    <!-- sys client config start-->

    <motan:referer id="sysUserService"
                   interface="com.xtr.api.service.sys.SysUserService" basicReferer="motantestClientBasicConfig"/>
    <motan:referer id="sysMenuService"
                   interface="com.xtr.api.service.sys.SysMenuService" basicReferer="motantestClientBasicConfig"/>
    <motan:referer id="sysMenuBtnService"
                   interface="com.xtr.api.service.sys.SysMenuBtnService" basicReferer="motantestClientBasicConfig"/>
    <motan:referer id="sysRoleService"
                   interface="com.xtr.api.service.sys.SysRoleService" basicReferer="motantestClientBasicConfig"/>
    <motan:referer id="sysRoleRelService"
                   interface="com.xtr.api.service.sys.SysRoleRelService" basicReferer="motantestClientBasicConfig"/>
    <motan:referer id="sysLogService"
                   interface="com.xtr.api.service.sys.SysLogService" basicReferer="motantestClientBasicConfig"/>

    <!-- company client config start -->
    <motan:referer id="companyRechargesService"
                   interface="com.xtr.api.service.company.CompanyRechargesService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="companyMemberLogsService"
                   interface="com.xtr.api.service.company.CompanyMemberLogsService"
                   basicReferer="motantestClientBasicConfig"/>

    <!-- customer client config start -->
    <motan:referer id="customersService"
                   interface="com.xtr.api.service.customer.CustomersService" basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="customerRechargesService"
                   interface="com.xtr.api.service.customer.CustomerRechargesService"
                   basicReferer="motantestClientBasicConfig"/>

    <!-- company client config start -->
    <motan:referer id="companysService"
                   interface="com.xtr.api.service.company.CompanysService" basicReferer="motantestClientBasicConfig"/>

    <!-- companyProtocol client config start -->
    <motan:referer id="companyProtocolsService"
                   interface="com.xtr.api.service.company.CompanyProtocolsService"
                   basicReferer="motantestClientBasicConfig"/>

    <!-- companyIntent client config start -->
    <motan:referer id="companyIntentService"
                   interface="com.xtr.api.service.company.CompanyIntentService"
                   basicReferer="motantestClientBasicConfig"/>

    <!-- companyNotes client config start -->
    <motan:referer id="companyNotesService"
                   interface="com.xtr.api.service.company.CompanyNotesService" basicReferer="motantestClientBasicConfig"/>

    <!-- stationCollaboration client config start -->
    <motan:referer id="stationCollaborationService"
                   interface="com.xtr.api.service.station.StationCollaborationService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="stationNewsService"
                   interface="com.xtr.api.service.station.StationNewsService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="companyBorrowOrdersService"
                   interface="com.xtr.api.service.company.CompanyBorrowOrdersService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="taskScheduleJobService" interface="com.xtr.api.service.task.TaskScheduleJobService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="taskLogService" interface="com.xtr.api.service.task.TaskLogService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="companyDepositService"
                   interface="com.xtr.api.service.company.CompanyDepositService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="dictionaryService"
                   interface="com.xtr.api.service.sys.DictionaryService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="subAccountService"
                   interface="com.xtr.api.service.account.SubAccountService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="jdPayService"
                   interface="com.xtr.api.service.gateway.JdPayService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="companyMsgsService"
                   interface="com.xtr.api.service.company.CompanyMsgsService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="sendMsgService"
                   interface="com.xtr.api.service.send.SendMsgService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="customerPayFaildService"
                   interface="com.xtr.api.service.customer.CustomerPayFaildService"
                   basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="companyShebaoService"
                   interface="com.xtr.api.service.shebao.CompanyShebaoService" basicReferer="motantestClientBasicConfig"/>
    <motan:referer id="shebaoDepoitService"
                   interface="com.xtr.api.service.shebao.ShebaoDepoitService" basicReferer="motantestClientBasicConfig"/>

    <motan:referer id="payRuleService"
                   interface="com.xtr.api.service.salary.PayRuleService" basicReferer="motantestClientBasicConfig"/>


    <motan:referer id="companyDepsService"
                     interface="com.xtr.api.service.company.CompanyDepsService" basicReferer="motantestClientBasicConfig"/>

    <motan:referer  id="customerShebaoService" interface="com.xtr.api.service.shebao.CustomerShebaoService" basicReferer="motantestClientBasicConfig"/>


    <motan:referer  id="customerShebaoOrderService" interface="com.xtr.api.service.shebao.CustomerShebaoOrderService" basicReferer="motantestClientBasicConfig"/>


</beans>