<!DOCTYPE html>
<html>

<head>
    <title>H+ 员工信息管理</title>
    #parse("comm/head.vm")
    <link href="#springUrl('/resource/css/hui/plugins/bootstrap-table/bootstrap-table.min.css')" rel="stylesheet">
</head>

<body>
<div class="col-sm-12">
    <div class="container-fluid">
        <div class="row-fluid">
            <form class="form-group" id="queryForm">
                <div class="col-sm-3">
                    <label style="margin-top:10px;" class="col-sm-3" control-label">认证状态</label>
                    <div class="col-sm-9">
                        <select class="form-control m-b" name="customerTruenameIsauthentication"
                                id="staffmanageinfo_customerTruenameIsauthentication">
                            <option value="">不选择</option>
                            <option value="1">已认证</option>
                            <option value="0">未认证</option>
                            <option value="2">认证未通过</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    <label style="margin-top:10px;" class="col-sm-3" control-label">企业名称</label>
                    <div class="col-sm-9">
                        <input type="text" placeholder="企业名称" class="form-control" name="customerCompanyName" id="customerCompanyName"/>
                    </div>
                </div>
                <div class="col-sm-3">
                    <input type="text" placeholder="根据姓名、身份证或手机号模糊检索" class="form-control" name="customerTurename" id="customerTurename">
                </div>
                <div class="col-sm-1">
                    <button class="btn btn-primary " type="button" id="queryBtn"><i class="fa fa-search"></i>&nbsp;&nbsp;&nbsp;搜索
                    </button>
                </div>
            </form>
            <table id="data-list"></table>
        </div>
    </div>

</div>

</body>

<script src="#springUrl('/resource/js/hui/content.min.js')"></script>
<script src="#springUrl('/resource/js/hui/plugins/bootstrap-table/bootstrap-table.min.js')"></script>
<script src="#springUrl('/resource/js/hui/plugins/bootstrap-table/bootstrap-table-mobile.min.js')"></script>
<script src="#springUrl('/resource/js/hui/plugins/bootstrap-table/locale/bootstrap-table-zh-CN.min.js')"></script>
<script src="#springUrl('/resource/js/hui/plugins/validate/jquery.validate.min.js')"></script>
<script src="#springUrl('/resource/js/comm/jdatagrid.js')"></script>
<script src="#springUrl('/resource/js/customer/staff/staffmanageinfo.js')"></script>
</html>