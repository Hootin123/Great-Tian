<!DOCTYPE html>
<html>

<head>
    <title>H+ 添加付款信息</title>
    #parse("comm/head.vm")
    <link href="#springUrl('/resource/css/hui/plugins/bootstrap-table/bootstrap-table.min.css')" rel="stylesheet">
    <link href="#springUrl('/resource/css/hui/plugins/bootstrap-datepicker/css/bootstrap-datetimepicker.css')" rel="stylesheet" />
    <script type="text/javascript" src="#springUrl('/resource/js/finance/shebaoPay/ajaxfileupload.js')"></script>
    <style>
    .a-upload {
    padding: 4px 10px !important;
    height: 28px;
    line-height: 28px !important;
    position: relative ;
     top: 12px;
    left: 27px;
    cursor: pointer;
    color: #888;
    background: #fafafa;
    border: 1px solid #ddd;
    border-radius: 4px;
    overflow: hidden;
    display: inline-block;
    *display: inline;
    *zoom: 1
    }

    .a-upload  input {
    position: absolute;
    font-size: 100px;
    right: 0;
    top: 0;
    opacity: 0;
    filter: alpha(opacity=0);
    cursor: pointer
    }

    .a-upload:hover {
    color: #444;
    background: #eee;
    border-color: #ccc;
    text-decoration: none
    }
    table tbody tr .pic{
        width:160px;
        height:120px;
        border: 1px dashed #ccc;
        font-family: '微软雅黑';
        font-size: 100px;
        text-align: center;
        line-height: 100px;
        color: #ccc;
        position: relative;
        cursor: pointer;
        }
    table tbody tr .pic img{
        position: absolute;
        top:0;
        left:0;
        display: block;
        width:100%;
        height:100%;
    }

    table tbody tr .pic input {
        position: absolute;
        width: 100%;
        height: 100%;
        right: 0;
        top: 0;
        opacity: 0;
        filter: alpha(opacity=0); }
    </style>
</head>

<body>
<div class="col-sm-12">
    <div class="container-fluid">
        <div class="row-fluid">
            <form  id="addPayInfoForm">
                <div class="panel panel-default" style="margin-top: 10px;">
                    <input type="hidden" value="$!{companyOrderId}" name="id">

                    <table id="companyManageTab" data-mobile-responsive="true" class="table table-hover table-bordered">
                        <tr>
                            <td style="width:15%;"><font color="red">*</font>开户行</td>
                            <td style="width:30%;"><input  name="shebaotongPayBankName" type="text" class="form-control" /></td>
                        </tr>
                        <tr>
                            <td><font color="red">*</font>收款账户</td>
                            <td><input  name="shebaotongPayCompanyAccount" type="text" class="form-control" /></td>
                        </tr>
                        <tr>
                            <td><font color="red">*</font>收款账号</td>
                            <td><input  name="shebaotongPayBankNo" type="text" class="form-control" /></td>
                        </tr>
                        <tr>
                            <td><font color="red">*</font>银行交易流水号</td>
                            <td><input  name="shebaotongPayBatch" type="text" class="form-control" /></td>
                        </tr>
                        <tr>
                            <td><font color="red">*</font>付款凭证</td>
                            <td >
                                <div class="pic">
                                    +
                                    <img src="#springUrl('/resource/img/error1.png')"  id="showPayImg">
                                    <input type="file"  name="file" id="shebaotongPayImg" onchange="uploadApproveImg();"/>
                                    <input type="hidden" name="shebaotongPayImg" >
                                </div>
                            </td>
##                            <td class="a-upload"><input type="file"  name="file"  id="shebaotongPayImg" onchange="uploadApproveImg();"/>请选择图片</td>
                        </tr>
##                        <tr>
##                            <td></td>
##                            <td>
##                                <img id="showPayImg" style="border:1px solid black;width:250px;height:150px;"></img>
##
##                            </td>
##                        </tr>
                    </table>
                </div>
                <div class="text-center" style="20px;">
                    <button type="button" class="btn btn-w-m btn-success" id="addPayInfoSureBtn">确定</button>
                    <button type="button" class="btn btn-w-m btn-white" onclick="cancelAddPayInfo();">取消</button>
                </div>
            </form>
        </div>
    </div>
</div>
</body>

<script src="#springUrl('/resource/js/hui/content.min.js')"></script>
<script src="#springUrl('/resource/js/hui/plugins/bootstrap-table/bootstrap-table.min.js')"></script>
<script src="#springUrl('/resource/js/hui/plugins/bootstrap-table/bootstrap-table-mobile.min.js')"></script>
<script src="#springUrl('/resource/js/hui/plugins/bootstrap-table/locale/bootstrap-table-zh-CN.min.js')"></script>
<script src="#springUrl('/resource/js/hui/plugins/validate/jquery.validate.min.js')"></script>
<script src="#springUrl('/resource/js/hui/plugins/bootstrap-datepicker/js/bootstrap-datetimepicker.min.js')"></script>
<script src="#springUrl('/resource/js/hui/plugins/bootstrap-datepicker/locales/bootstrap-datetimepicker.zh-CN.js')"></script>
<script src="#springUrl('/resource/js/comm/jdatagrid.js')"></script>
<script src="#springUrl('/resource/js/finance/shebaoPay/shebaoAdd.js')"></script>
</html>