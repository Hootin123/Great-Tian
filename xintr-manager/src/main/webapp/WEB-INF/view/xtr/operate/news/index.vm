<!DOCTYPE html>
<html>
<head>
    <title>企业新闻管理</title>
    #parse("comm/head.vm")
    <link href="#springUrl('/resource/css/hui/plugins/bootstrap-table/bootstrap-table.min.css')" rel="stylesheet">
</head>

<body>
<div class="col-sm-12">
    <div class="container-fluid">
        <div class="row-fluid">

            <div class="ibox-content">
                <div class="row">
                    <form class="form-inline" role="form" method="post" style="line-height: 40px;">
                        <div class="form-group" style="margin-top: 10px;">
                            <label class="col-sm-5 control-label" >发布状态</label>
                            <div class="col-sm-7">
                                <select id="newsState" name="newsState" class="form-control m-b" style="margin-top: 5px;">
                                    <option value="">请选择</option>
                                    <option value="0">待发布</option>
                                    <option value="1">已发布</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group" style="margin-top: 10px;">
                            <label class="col-sm-5 control-label" >新闻类型</label>
                            <div class="col-sm-7">
                                <select id="newsType" name="newsType" class="form-control m-b" style="margin-top: 5px;">
                                    <option value="">请选择</option>
                                    <option value="1">系统公告</option>
                                    <option value="2">系统通知单</option>
                                    <option value="3">媒体报道</option>
                                    <option value="4">平台活动</option>
                                    <option value="5">HR知识库</option>
                                    <option value="6">政策薪解</option>
                                    <option value="7">动态推送</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <input type="text" id="newsTitle" name="newsTitle" class="form-control" placeholder="根据新闻标题模糊检索" />
                            </div>
                        </div>
                        <button class="btn btn-primary" type="button" id="queryBtn"><i class="fa fa-search"></i>&nbsp;&nbsp;&nbsp;搜索</button>

                        <a class="btn btn-danger" href="publish.htm">发布新闻</a>

                    </form>

                </div>
            </div>

            <table id="data-list"></table>

        </div>
    </div>


</div>

</body>
<script src="#springUrl('/resource/js/hui/content.min.js')"></script>
<script src="#springUrl('/resource/js/hui/plugins/bootstrap-table/bootstrap-table.min.js')"></script>
<script src="#springUrl('/resource/js/hui/plugins/bootstrap-table/bootstrap-table-mobile.min.js')"></script>
<script src="#springUrl('/resource/js/hui/plugins/bootstrap-table/locale/bootstrap-table-zh-CN.min.js')"></script>
<script src="#springUrl('/resource/js/hui/plugins/validate/jquery.validate.min.js')"></script>
<script src="#springUrl('/resource/js/comm/jdatagrid.js')"></script>
<script src="#springUrl('/resource/js/operate/news/index.js')"></script>
</html>