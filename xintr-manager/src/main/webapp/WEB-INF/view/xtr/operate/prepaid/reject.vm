<!DOCTYPE html>
<html>
<head>
    <title>垫付驳回</title>
    #parse("comm/head.vm")
</head>

<body>
<div style="padding: 10px" class="container-fluid">

    <div class="row">
        <form class="form-inline" role="form" method="post" id="queryForm">
            <div class="form-group col-sm-12">
                <textarea id="cause" class="form-control"></textarea>
            </div>
            <div class="form-group col-sm-12 text-center ">
                <button class="btn btn-primary" type="button"onclick="PrepaidRejectExtend.save()">
                    保存
                </button>
                <button class="btn" type="button" onclick="PrepaidRejectExtend.close()">
                    取消
                </button>
            </div>
        </form>
    </div>

</div>

</body>
<script src="#springUrl('/resource/js/hui/content.min.js')"></script>
<script>

    PrepaidRejectExtend = {
        save:function(){
            $.post(BASE_PATH + '/operate/prepaid/reject.htm', {"cId" : parent.companyId, "cause" : $("#cause").val()}, function(data){
                if (data.success) {
                    parent.PrepaidExtend.grid.onQuery()
                    PrepaidRejectExtend.close();
                } else {
                    showWarning(data.message);
                }
            });

        },
        close:function(){
            var index = parent.layer.getFrameIndex(window.name); //获取窗口索引
            parent.layer.close(index);
        }
    }

</script>
</html>