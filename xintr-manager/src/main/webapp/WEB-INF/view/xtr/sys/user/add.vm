<!DOCTYPE html>
<html>

<head>
    <title>新增用户</title>
    #parse("comm/head.vm")
</head>


<div class="ibox" style="padding-top: 0px">
##    <div class="ibox-title">
##        <h5>新增用户</h5>
##        <div class="ibox-tools">
##            <a class="close right" data-dismiss="modal" onclick="resetMenuValidateForm()">×</a>
##        </div>
##    </div>

    <div class="ibox-content">
        <form class="form-inline m-t" id="editForm">
            #if($user)##修改数据
                <input type="text" id="id" name="id" class="hidden" value="$user.id"/>
            #end


            #if($user.id)
                <div class="form-group">
                    <label class="col-sm-3 control-label">昵称：</label>

                    <div class="col-sm-8">
                        <input id="nickName" name="nickName" class="form-control" type="text"
                               #if($user)value="$user.nickName" #end>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">手机号码：</label>

                    <div class="col-sm-8">
                        <input id="mobilePhone" name="mobilePhone" class="form-control" type="text"
                               #if($user && $user.mobilePhone)value="$user.mobilePhone" #end>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">邮箱地址：</label>

                    <div class="col-sm-8">
                        <input id="email" name="email" class="form-control" type="text"
                               #if($user && $user.email)value="$user.email" #end>
                    </div>
                </div>
            #else
                <div class="form-group">
                    <label class="col-sm-3 control-label">昵称：</label>

                    <div class="col-sm-8">
                        <input id="nickName" name="nickName" class="form-control" type="text"
                               placeholder="请输入昵称">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">手机号码/邮箱地址：</label>

                    <div class="col-sm-8">
                        <input id="mobilePhone" name="mobilePhone" class="form-control" type="text"
                               placeholder="请输入手机号或邮箱地址">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">密码：</label>

                    <div class="col-sm-8">
                        <input id="pwd" name="pwd" type="password" class="form-control" placeholder="请输入密码">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">重复密码：</label>

                    <div class="col-sm-8">
                        <input id="js_pwd" name="js_pwd" type="password" class="form-control" placeholder="请再次输入密码">
                    </div>
                </div>
            #end


            <div class="form-group">
                <label class="col-sm-2 control-label">状态</label>

                <div class="col-sm-10">
                    <select class="form-control m-b" id="state" name="state">
                        <option value="0" #if(($user && $user.state == 0) || !$user)selected="selected"#end>可用</option>
                        <option value="1" #if($user && $user.state == 1)selected="selected"#end>禁用</option>
                    </select>
                </div>
            </div>
        ##            <div class="modal-footer" style="padding-top: 30px">
        ##                <button type="button" class="btn btn-white" data-dismiss="modal" onclick="resetMenuValidateForm()">关闭</button>
        ##                <button id="addMenuBtn" type="submit"
        ##                        class="btn btn-primary">保存
        ##                </button>
        ##            </div>
        </form>
    </div>
</div>
<script src="#springUrl('/resource/js/sys/user/addUser.js')"></script>
</html>
